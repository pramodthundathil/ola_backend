# =====================================
# Django & Python .gitignore Template
# =====================================

# Ignore all SQLite databases
*.sqlite3
*.db

# Ignore all media files (user uploads, etc.)
media/
uploads/

# Ignore all cache directories
__pycache__/
*__pycache__*/
*.py[cod]
*$py.class

# Ignore virtual environments
venv/
env/
ENV/
.venv/
.env/

# Ignore compiled, packaged, or distribution files
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
*.egg-info/
.installed.cfg
*.egg

# Ignore Django-related local files
db.sqlite3
local_settings.py
staticfiles/
static_root/
tmp/
*.log

# Ignore environment & secret files
.env
*.env
.env.*
secrets.json

# Ignore editor and IDE files
.vscode/
.idea/
*.swp
*.swo

# Ignore migration caches (not the actual migrations)
**/migrations/__pycache__/

# Ignore system files
.DS_Store
Thumbs.db
